{
  "manifest_version": 2,
  "name": "Locke-222",
  "description": "SO Chat Upgrade Extension",
  "version": "0.1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://chat.stackoverflow.com/rooms/*",
    "*://cdn-chat.sstatic.net/chat/*"
  ],
  "background": {
    "scripts": [
      "static/js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.stackoverflow.com/rooms/*"
      ],
      "css": [
        "static/css/main.css"
      ],
      "js": [
        "static/js/main.js"
      ]
    }
  ],
  "icons": {
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "web_accessible_resources": [
    "*"
  ],
  "comments": {
    "web_accessible_resources": [
      "This wildcard needs to be replaced with specific file references before we ship the extension",
      "https://developer.chrome.com/extensions/manifest/web_accessible_resources"
    ]
  }
}
